<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#FFD1DC"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 商家信息区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/shop"
            android:layout_marginEnd="12dp"
            android:contentDescription="商家图标" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="糖屿蛋糕"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#EEEEEE" />

    <!-- 订单基本信息 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_list_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单ID：OD2025060511300001"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />


        <TextView
            android:id="@+id/order_list_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下单时间：2025-06-05 11:30:00"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />

        <!-- 订单状态和操作按钮放在同一行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/order_list_item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单状态：待发货"
                android:textSize="14sp"
                android:textColor="#FF5722"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_order_detail"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/orderdetail"
                android:contentDescription="订单详情" />

<!--            <Button-->
<!--                android:id="@+id/btn_order_del"-->
<!--                android:layout_width="36dp"-->
<!--                android:layout_height="36dp"-->
<!--                android:layout_marginEnd="4dp"-->
<!--                android:background="@drawable/delete"-->
<!--                android:contentDescription="删除订单" />-->


        </LinearLayout>
    </LinearLayout>
</LinearLayout>


