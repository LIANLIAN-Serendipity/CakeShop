<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@drawable/shape_background"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cakelist_item_img"
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/cake1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cakelist_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="蛋糕名称" />

        <TextView
            android:id="@+id/cakelist_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:text="价格：19元" />

        <TextView
            android:id="@+id/cakelist_item_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="蛋糕介绍：... " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cakelist_item_minus"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/minus" />

            <TextView
                android:id="@+id/cakelist_item_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="17dp"
                android:text="0" />

            <ImageView
                android:id="@+id/cakelist_item_add"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/add" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>