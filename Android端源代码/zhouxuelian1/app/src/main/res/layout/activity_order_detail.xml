<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 顶部导航栏 -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/cake_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/back"
            android:background="#FF5722"
            app:title="订单详情"
            app:titleTextColor="#ffffff" />

        <!-- 订单基本信息 -->
        <LinearLayout
            android:id="@+id/layout_order_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号：OD123456"
                android:textSize="16sp"
                android:textColor="#333333"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tv_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单时间：2024-08-01 10:00"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tv_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单状态：已完成"
                android:textSize="14sp"
                android:textColor="#FF5722"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- 订单商品列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_order_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_marginTop="8dp"
            android:padding="16dp" />

        <!-- 收货信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货信息"
                android:textSize="16sp"
                android:textColor="#333333"
                android:fontFamily="sans-serif-medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收件人：张三"
                    android:textSize="14sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tv_customer_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  13800138000"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_delivery_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="福建省厦门市思明区莲前西路123号"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- 订单总金额 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单总金额：￥299.00"
                android:textSize="16sp"
                android:textColor="#FF5722"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- 订单备注 -->
        <TextView
            android:id="@+id/tv_order_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="备注：请下午3点后送达"
            android:textSize="14sp"
            android:textColor="#FF5722"
            android:padding="12dp"
            android:background="#FFF0F0"
            android:layout_marginTop="4dp" />

        <!-- 操作按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@android:color/white"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btn_reorder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="再次购买"
                android:backgroundTint="#FFE0E0"
                android:textColor="#FF5722"
                android:layout_marginEnd="8dp"
                android:padding="12dp" />

            <Button
                android:id="@+id/btn_modify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="修改订单"
                android:backgroundTint="#FF5722"
                android:textColor="@android:color/white"
                android:padding="12dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>